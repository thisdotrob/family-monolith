{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@apollo/*": [
        "./node_modules/@apollo/*"
      ],
      "graphql": [
        "./node_modules/graphql/*"
      ],
     "react": ["./node_modules/@types/react/index"],
     "react/jsx-runtime": ["./node_modules/@types/react/jsx-runtime"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.d.ts",
    "../shared/**/*.ts",
    "../shared/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "app/__tests__/**",
    "components/**",
    "hooks/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
