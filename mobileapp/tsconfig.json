{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": [
      "react",
      "react-native"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@apollo/*": [
        "./node_modules/@apollo/*"
      ],
      "graphql": [
        "./node_modules/graphql/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.d.ts",
    "../shared/**/*.ts",
    "../shared/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "app/__tests__/**",
    "components/**",
    "hooks/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
