{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "types": ["react", "react-native", "jest"],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/*"],
      "@apps-mobile/*": ["../apps/mobile/*"],
      "@apollo/*": ["./node_modules/@apollo/*"],
      "graphql": ["./node_modules/graphql/*"],
      "@react-navigation/*": ["./node_modules/@react-navigation/*"],
      "@expo/vector-icons": ["./node_modules/@expo/vector-icons"],
      "expo-localization": ["./node_modules/expo-localization"],
      "@react-native-community/netinfo": ["./node_modules/@react-native-community/netinfo"],
      "react-native": ["./node_modules/react-native"],
      "react-native/*": ["./node_modules/react-native/*"],
      "react-native-paper": ["./node_modules/react-native-paper"],
      "react-native-paper/*": ["./node_modules/react-native-paper/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "../shared/**/*.ts",
    "../shared/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["app/__tests__/**", "components/**", "hooks/**", "**/*.test.ts", "**/*.test.tsx"]
}
